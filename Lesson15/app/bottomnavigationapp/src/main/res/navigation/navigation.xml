<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ru.mirea.shparaga.bottomnavigationapp.HomeFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_home"
        android:theme="@style/FragmentStyle" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="ru.mirea.shparaga.bottomnavigationapp.InfoFragment"
        android:label="Лучшая цитата"
        tools:layout="@layout/fragment_info"
        android:theme="@style/FragmentStyle" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="ru.mirea.shparaga.bottomnavigationapp.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile"
        android:theme="@style/FragmentStyle" />
